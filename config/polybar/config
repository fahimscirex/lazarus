[module/updates]

type = custom/script
interval = 3600
tail = true
exec = bash $HOME/.config/polybar/scripts/checkupdates.sh
format-underline = ${colors.RED}
;format-padding = 1
;format-margin = ${margin.for-modules}
click-left = $TERMINAL -e bash $HOME/.config/polybar/scripts/updates.sh &

